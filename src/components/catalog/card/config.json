{
  "metadata": {
    "name": "Card",
    "description": "A flexible container for content",
    "category": "Layout",
    "tags": ["card", "container", "layout", "content"],
    "author": "shadcn/ui",
    "version": "1.0.0"
  },
  "code": "import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from '@/components/ui/card'\nimport { Button } from '@/components/ui/button'\n\nexport default function CardComponent() {\n  return (\n    <Card className=\"{{className}}\">\n      <CardHeader>\n        <CardTitle>{{title}}</CardTitle>\n        <CardDescription>{{description}}</CardDescription>\n      </CardHeader>\n      <CardContent>\n        <p>{{content}}</p>\n      </CardContent>\n      <CardFooter>\n        <Button variant=\"{{buttonVariant}}\" size=\"{{buttonSize}}\">{{buttonText}}</Button>\n      </CardFooter>\n    </Card>\n  )\n}",
  "properties": [
    {
      "name": "title",
      "label": "Title",
      "type": "string",
      "defaultValue": "Card Title",
      "category": "Content",
      "description": "The card title"
    },
    {
      "name": "description",
      "label": "Description",
      "type": "string",
      "defaultValue": "Card description",
      "category": "Content",
      "description": "The card description"
    },
    {
      "name": "content",
      "label": "Content",
      "type": "textarea",
      "defaultValue": "Card content goes here",
      "category": "Content",
      "description": "The main card content"
    },
    {
      "name": "buttonText",
      "label": "Button Text",
      "type": "string",
      "defaultValue": "Action",
      "category": "Content",
      "description": "Text for the footer button"
    },
    {
      "name": "buttonVariant",
      "label": "Button Variant",
      "type": "select",
      "defaultValue": "default",
      "category": "Appearance",
      "options": [
        { "label": "Default", "value": "default" },
        { "label": "Secondary", "value": "secondary" },
        { "label": "Outline", "value": "outline" },
        { "label": "Ghost", "value": "ghost" }
      ],
      "description": "Button style variant"
    },
    {
      "name": "buttonSize",
      "label": "Button Size",
      "type": "select",
      "defaultValue": "default",
      "category": "Appearance",
      "options": [
        { "label": "Small", "value": "sm" },
        { "label": "Default", "value": "default" },
        { "label": "Large", "value": "lg" }
      ],
      "description": "Button size"
    },
    {
      "name": "className",
      "label": "Additional CSS Classes",
      "type": "string",
      "defaultValue": "",
      "category": "Styling",
      "description": "Additional Tailwind CSS classes"
    }
  ],
  "variableMappings": [
    {
      "propertyName": "title",
      "type": "content",
      "target": "CardTitle",
      "path": "text",
      "defaultValue": "Card Title"
    },
    {
      "propertyName": "description",
      "type": "content",
      "target": "CardDescription",
      "path": "text",
      "defaultValue": "Card description"
    },
    {
      "propertyName": "content",
      "type": "content",
      "target": "CardContent",
      "path": "text",
      "defaultValue": "Card content goes here"
    },
    {
      "propertyName": "buttonText",
      "type": "content",
      "target": "Button",
      "path": "text",
      "defaultValue": "Action"
    },
    {
      "propertyName": "buttonVariant",
      "type": "attribute",
      "target": "Button",
      "path": "variant",
      "defaultValue": "default"
    },
    {
      "propertyName": "buttonSize",
      "type": "attribute",
      "target": "Button",
      "path": "size",
      "defaultValue": "default"
    },
    {
      "propertyName": "className",
      "type": "className",
      "target": "Card",
      "path": "className",
      "defaultValue": ""
    }
  ],
  "dependencies": {
    "@/components/ui/card": "@/components/ui/card",
    "@/components/ui/button": "@/components/ui/button"
  }
}

